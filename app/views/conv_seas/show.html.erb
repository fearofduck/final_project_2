<div class="page-header">
  <h3>Conv Sea #<%= @conv_sea.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Jan</dt>
      <dd><%= @conv_sea.jan %></dd>

      <dt>Feb</dt>
      <dd><%= @conv_sea.feb %></dd>

      <dt>Mar</dt>
      <dd><%= @conv_sea.mar %></dd>

      <dt>Apr</dt>
      <dd><%= @conv_sea.apr %></dd>

      <dt>May</dt>
      <dd><%= @conv_sea.may %></dd>

      <dt>Jun</dt>
      <dd><%= @conv_sea.jun %></dd>

      <dt>Jul</dt>
      <dd><%= @conv_sea.jul %></dd>

      <dt>Aug</dt>
      <dd><%= @conv_sea.aug %></dd>

      <dt>Sep</dt>
      <dd><%= @conv_sea.sep %></dd>

      <dt>Oct</dt>
      <dd><%= @conv_sea.oct %></dd>

      <dt>Nov</dt>
      <dd><%= @conv_sea.nov %></dd>

      <dt>Dec</dt>
      <dd><%= @conv_sea.dec %></dd>

      <dt>Name</dt>
      <dd><%= @conv_sea.name %></dd>

      <dt>User</dt>
      <dd><%= @conv_sea.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/conv_seas" class="btn btn-primary">
        Back
      </a>
      <a href="/conv_seas/<%= @conv_sea.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_conv_sea/<%= @conv_sea.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Conv sea has many seasonalities -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Seasonalities
      </li>

      <% @conv_sea.seasonalities.each do |seasonality| %>
        <li class="list-group-item">
          <a href="/seasonalities/<%= seasonality.id %>">
            <%= seasonality.scenario %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/seasonalities/<%= seasonality.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/seasonalities/<%= seasonality.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_seasonality/<%= seasonality.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
