<!-- Validation failure messages -->
<% if @cycle_time.errors.any? %>
  <% @cycle_time.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Cycle Time #<%= @cycle_time.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_cycle_time/<%= @cycle_time.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for scenario -->
      <div class="form-group">
        <label for="scenario" class="control-label">
          Scenario
        </label>

        <input type="text" id="scenario" name="scenario" placeholder="Scenario" class="form-control" value="<%= @cycle_time.scenario %>">
      </div>

      <!-- Label and input for ds40_ct_id -->
      <div class="form-group">
        <label for="ds40_ct_id" class="control-label">
          Ds40 ct
        </label>

        <%= select_tag(:ds40_ct_id, options_from_collection_for_select(Ds40Ct.all, :id, :jan, @cycle_time.ds40_ct_id), :class => "form-control") %>
      </div>

      <!-- Label and input for conv_ct_id -->
      <div class="form-group">
        <label for="conv_ct_id" class="control-label">
          Conv ct
        </label>

        <%= select_tag(:conv_ct_id, options_from_collection_for_select(ConvCt.all, :id, :jan, @cycle_time.conv_ct_id), :class => "form-control") %>
      </div>

      <!-- Label and input for ds53_ct_id -->
      <div class="form-group">
        <label for="ds53_ct_id" class="control-label">
          Ds53 ct
        </label>

        <%= select_tag(:ds53_ct_id, options_from_collection_for_select(Ds53Ct.all, :id, :jan, @cycle_time.ds53_ct_id), :class => "form-control") %>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @cycle_time.user_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Cycle Time
      </button>
      or
      <a href="/cycle_times/<%= @cycle_time.id %>">Cancel</a>
    </form>
  </div>
</div>
