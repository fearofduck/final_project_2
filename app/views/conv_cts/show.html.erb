<div class="page-header">
  <h3>Conv Ct #<%= @conv_ct.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Jan</dt>
      <dd><%= @conv_ct.jan %></dd>

      <dt>Feb</dt>
      <dd><%= @conv_ct.feb %></dd>

      <dt>Mar</dt>
      <dd><%= @conv_ct.mar %></dd>

      <dt>Apr</dt>
      <dd><%= @conv_ct.apr %></dd>

      <dt>May</dt>
      <dd><%= @conv_ct.may %></dd>

      <dt>Jun</dt>
      <dd><%= @conv_ct.jun %></dd>

      <dt>Jul</dt>
      <dd><%= @conv_ct.jul %></dd>

      <dt>Aug</dt>
      <dd><%= @conv_ct.aug %></dd>

      <dt>Sep</dt>
      <dd><%= @conv_ct.sep %></dd>

      <dt>Oct</dt>
      <dd><%= @conv_ct.oct %></dd>

      <dt>Nov</dt>
      <dd><%= @conv_ct.nov %></dd>

      <dt>Dec</dt>
      <dd><%= @conv_ct.dec %></dd>

      <dt>Name</dt>
      <dd><%= @conv_ct.name %></dd>

      <dt>User</dt>
      <dd><%= @conv_ct.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/conv_cts" class="btn btn-primary">
        Back
      </a>
      <a href="/conv_cts/<%= @conv_ct.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_conv_ct/<%= @conv_ct.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Conv ct has many cycle_times -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Cycle Times
      </li>

      <% @conv_ct.cycle_times.each do |cycle_time| %>
        <li class="list-group-item">
          <a href="/cycle_times/<%= cycle_time.id %>">
            <%= cycle_time.scenario %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/cycle_times/<%= cycle_time.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/cycle_times/<%= cycle_time.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_cycle_time/<%= cycle_time.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
